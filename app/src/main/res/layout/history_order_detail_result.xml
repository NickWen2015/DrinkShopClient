<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_order_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:text="明細"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/item_view_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="訂單編號:"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tvName"
                    android:textSize="20dp"
                    android:text="12345"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvMilkTea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvName"
                    android:textSize="18dp"
                    android:text="烏龍奶茶"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvSweetness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tvMilkTea"
                    android:layout_below="@+id/tvName"
                    android:textSize="18dp"
                    android:text="半糖"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvIce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tvSweetness"
                    android:layout_below="@+id/tvName"
                    android:textSize="18dp"
                    android:text="微冰"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@id/tvIce"
                    android:layout_below="@+id/tvOrderId"
                    android:textSize="18dp"
                    android:text="L"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvPrices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tvSize"
                    android:layout_below="@+id/tvOrderId"
                    android:textSize="18dp"
                    android:text="50元"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tvPrices"
                    android:layout_below="@+id/tvOrderId"
                    android:textSize="18dp"
                    android:text="2杯"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="45dp"
                    android:layout_toRightOf="@id/tvPrices"
                    android:layout_below="@+id/tvOrderId"
                    android:textSize="18dp"
                    android:text="100元"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvTea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvMilkTea"
                    android:textSize="18dp"
                    android:text="四季春"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvSweetnes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tvMilkTea"
                    android:layout_below="@+id/tvMilkTea"
                    android:textSize="18dp"
                    android:text="無糖"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvIces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tvSweetnes"
                    android:layout_below="@+id/tvMilkTea"
                    android:textSize="18dp"
                    android:text="去冰"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvSizes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tvIces"
                    android:layout_below="@+id/tvMilkTea"
                    android:textSize="18dp"
                    android:text="M"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvPricess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tvSizes"
                    android:layout_below="@+id/tvMilkTea"
                    android:textSize="18dp"
                    android:text="40元"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvQuantitys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tvPrices"
                    android:layout_below="@+id/tvMilkTea"
                    android:textSize="18dp"
                    android:text="5杯"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvTotalPrices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tvQuantitys"
                    android:layout_below="@+id/tvMilkTea"
                    android:textSize="18dp"
                    android:text="200元"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvTea"
                    android:textSize="20dp"
                    android:text="訂購價格:"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tvtvQuantityDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tvPrice"
                    android:layout_below="@+id/tvTea"
                    android:textSize="20dp"
                    android:text="300元"
                    android:textColor="@color/colorBlack"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/cardview"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/coordinator_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5F94D2">

            <Button
                android:id="@+id/btheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@drawable/buttonstyle"
                android:text="再買一次"/>

        </android.support.design.widget.CoordinatorLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
