<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.AddingProductToShoppingCartActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        app:srcCompat="@drawable/product_activity_test_a001" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHotOrIce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:text="冷熱飲" />

        <Button
            android:id="@+id/btnIce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:onClick="onClickIce"
            android:text="冷" />

        <Button
            android:id="@+id/btnHot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:onClick="onClickHot"
            android:text="熱" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:text="容量" />

        <Button
            android:id="@+id/btnSizeM"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:onClick="onClickSizeM"
            android:text="M" />

        <Button
            android:id="@+id/btnSizeL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:onClick="onClickSizeL"
            android:text="L" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:text="數量（杯）" />

        <Button
            android:id="@+id/btnBackQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="23"
            android:text="-" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="23"
            android:gravity="center"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnAddQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="23"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSuger"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:text="甜度" />

        <SeekBar
            android:id="@+id/sbSuger"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:max="4"
            android:theme="@style/Base.Widget.AppCompat.SeekBar.Discrete" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearIce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvIce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center"
                android:text="冷飲" />

            <SeekBar
                android:id="@+id/sbProductIce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:max="3"
                android:theme="@style/Base.Widget.AppCompat.SeekBar.Discrete" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearHot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvHot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center"
                android:text="熱飲" />

            <SeekBar
                android:id="@+id/sbProductHot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:max="2"
                android:theme="@style/Base.Widget.AppCompat.SeekBar.Discrete" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddingProductToShoppingCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClickAddingProductToShoppingCard"
            android:text="加入購物車" />
    </LinearLayout>
</LinearLayout>